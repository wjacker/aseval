<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	layout="absolute">
	<mx:Script>
		<![CDATA[
            import com.justin.validator.ExpressionEvaluator;
            private var ee:ExpressionEvaluator = new ExpressionEvaluator();

            private function calculatorExpress():void
            {
            	try
            	{
                    var obj:Object = new Object();
                    var s:String = veriableInput.text.replace(/ /g, "");
                    var result:Array = s.split(",");
                    for each(var veriable:String in result)
                    {
                        if(veriable != "")
                        {
                            var splitS:Array = veriable.split(":");
                            obj[splitS[0]] = splitS[1];
                        }
                    }

                    obj["justin"] = justin;
                    var expressStr:String = input.text.replace(/ /g, "");
                    outupt.text = ee.eval(expressStr, obj) + "";
            	}
            	catch(e:Error)
            	{
            		outupt.text = "Eval Error";
            	}
            }

            private function justin(x:Number,y:Number):Number
            {
                return Math.sqrt(Math.pow(x, 2) + Math.pow(y,2));
            }
		]]>
	</mx:Script>

	<mx:Label text="Expression Input:" x="11" y="12"/>
    <mx:TextArea id="input" x="123" y="10" text="sqrt(abs(min(max(a,b),d-c)))" width="309" height="166"/>
